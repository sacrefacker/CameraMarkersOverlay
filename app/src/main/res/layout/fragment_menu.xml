<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#cccccc"
    android:id="@+id/main_menu_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:baselineAligned="false"
    tools:context=".FragmentMenu"
    tools:showIn="@layout/activity_menu" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/main_menu_overlay_button"
            android:contentDescription="@string/main_menu_overlay_desc"
            android:padding="10dp"
            android:layout_width="@dimen/main_menu_icon_size"
            android:layout_height="@dimen/main_menu_icon_size" />

        <ImageView
            android:id="@+id/main_menu_filters_button"
            android:contentDescription="@string/main_menu_filters_desc"
            android:padding="10dp"
            android:layout_width="@dimen/main_menu_icon_size"
            android:layout_height="@dimen/main_menu_icon_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/main_menu_find_button"
            android:contentDescription="@string/main_menu_find_desc"
            android:padding="10dp"
            android:layout_width="@dimen/main_menu_icon_size"
            android:layout_height="@dimen/main_menu_icon_size" />

        <ImageView
            android:id="@+id/main_menu_settings_button"
            android:contentDescription="@string/main_menu_settings_desc"
            android:padding="10dp"
            android:layout_width="@dimen/main_menu_icon_size"
            android:layout_height="@dimen/main_menu_icon_size" />

    </LinearLayout>

</LinearLayout>
